<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.cocoball.lms.member.map.MemberMapper">
	<select id="memberSelectList" resultType="co.cocoball.lms.member.service.MemberVO">
		SELECT * FROM MEMBER
	</select>
	<select id="memberSelect" resultType="co.cocoball.lms.member.service.MemberVO">
		SELECT * FROM MEMBER WHERE MEMBER_ID = #{memberId}
		<if test = "memberPw != null">
			AND MEMBER_PW = #{memberPw}
		</if>
	</select>
	<insert id="memberInsert" parameterType="co.cocoball.lms.member.service.MemberVO">
		INSERT INTO MEMBER VALUES
		(#{memberId}, #{memberPw}, #{memberName}, 
		#{memberAge}, #{memberGender}, #{memberTel}, #{memberAddress})
	</insert>
	<delete id="memberDelete" parameterType="co.cocoball.lms.member.service.MemberVO">
		DELETE FROM MEMBER WHERE MEMBER_ID = #{memberId}
	</delete>
	<update id="memberUpdate" parameterType="co.cocoball.lms.member.service.MemberVO">
		UPDATE MEMBER SET MEMBER_NAME = #{memberName} WHERE MEMBER_ID #{memberId}
	</update>
</mapper>